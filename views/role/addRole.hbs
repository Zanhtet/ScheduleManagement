<section id="home" class="s-home target-section" data-parallax="scroll" data-image-src="images/hero-bg.jpg"
    data-natural-width=3000 data-natural-height=2000 data-position-y=center>
    <div class="overlay"></div>
    <div class="shadow-overlay"></div>
    <div class="home-content">
        <div class="row contact-content">
            <h1>Add Role</h1>
            <form method="post" novalidate="novalidate">
                <fieldset>
                    <div class="form-field">
                        <input name="roleName" type="text" placeholder="Role Name" required="" aria-required="true"
                            class="full-width">
                    </div>
                    <div class="form-field">
                        <label for="canViewReport" class="subscribe-message">Can View Report</label>
                        <input id="canViewReport" value="1" name="canViewReport" type="checkbox">
                    </div>
                    <div class="form-field">
                        <label for="canCreateEmployee" class="subscribe-message">Can Create Employee</label>
                        <input id="canCreateEmployee" value="1" name="canCreateEmployee" type="checkbox">
                    </div>
                    <div class="form-field">
                        <label for="canAssginJob" class="subscribe-message">Can Assign Job</label>
                        <input id="canAssginJob" value="1" name="canAssginJob" type="checkbox">
                    </div>
                    <div class="form-field">
                        <label for="canCreateJob" class="subscribe-message">Can Create Job</label>
                        <input id="canCreateJob" value="1" name="canCreateJob" type="checkbox">
                    </div>
                    <div class="form-field">
                        <button type="submit" class="btn--primary">Submit</button>
                        <button type="button" onclick="window.location.href='/role'"
                            class="btn--primary">Cancel</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</section>